rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isTeamMember(teamId) {
      return isAuthenticated() && teamId in getUserData().teams;
    }
    
    function isTeamAdmin(teamId) {
      return isAuthenticated() && 
             (getUserData().role == 'super_admin' ||
              (getUserData().role == 'team_admin' && teamId in getUserData().teams));
    }
    
    function isSuperAdmin() {
      return isAuthenticated() && getUserData().role == 'super_admin';
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);
      
      // Users can update their own profile (except role and teams, which require admin)
      allow update: if isOwner(userId) && 
                       (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'teams']) ||
                        isSuperAdmin());
      
      // Only system can create users (via AuthProvider)
      allow create: if isAuthenticated();
    }
    
    // Teams collection
    match /teams/{teamId} {
      // Team members can read
      allow read: if isTeamMember(teamId);
      
      // Only super admins can create teams
      allow create: if isSuperAdmin();
      
      // Team admins can update their teams
      allow update: if isTeamAdmin(teamId);
      
      // Team admins can delete their teams
      allow delete: if isTeamAdmin(teamId);
    }
    
    // Team Requests collection
    match /teamRequests/{requestId} {
      // Players can read their own requests, admins can read requests for their teams
      allow read: if isOwner(resource.data.playerId) || 
                     isTeamAdmin(resource.data.teamId);
      
      // Authenticated users can create requests
      allow create: if isAuthenticated() && 
                       request.resource.data.playerId == request.auth.uid;
      
      // Team admins can update requests (approve/reject)
      allow update: if isTeamAdmin(resource.data.teamId);
      
      // Players can delete their own pending requests
      allow delete: if isOwner(resource.data.playerId) && 
                       resource.data.status == 'pending';
    }
    
    // Posts collection (Fun Corner)
    match /posts/{postId} {
      // Team members can read posts from their teams
      allow read: if isTeamMember(resource.data.teamId);
      
      // Team members can create posts
      allow create: if isAuthenticated() && 
                       isTeamMember(request.resource.data.teamId) &&
                       request.resource.data.userId == request.auth.uid;
      
      // Users can update their own posts
      allow update: if isOwner(resource.data.userId);
      
      // Users can delete their own posts, admins can delete any post
      allow delete: if isOwner(resource.data.userId) || 
                       isTeamAdmin(resource.data.teamId);
    }
    
    // Fines collection
    match /fines/{fineId} {
      // Team members can read fines from their teams
      allow read: if isTeamMember(resource.data.teamId);
      
      // Team admins can create fines
      allow create: if isTeamAdmin(request.resource.data.teamId);
      
      // Players can update their own fines (mark as paid)
      // Admins can update any fine
      allow update: if isOwner(resource.data.playerId) || 
                       isTeamAdmin(resource.data.teamId);
      
      // Team admins can delete fines
      allow delete: if isTeamAdmin(resource.data.teamId);
    }
    
    // Games collection (Availability)
    match /games/{gameId} {
      // Team members can read games from their teams
      allow read: if isTeamMember(resource.data.teamId);
      
      // Team admins can create games
      allow create: if isTeamAdmin(request.resource.data.teamId);
      
      // Team members can update availability
      // Team admins can update game details
      allow update: if isTeamMember(resource.data.teamId);
      
      // Team admins can delete games
      allow delete: if isTeamAdmin(resource.data.teamId);
    }
    
    // Matches collection
    match /matches/{matchId} {
      // Public read for live matches
      allow read: if true;
      
      // Authenticated users can create matches
      allow create: if isAuthenticated();
      
      // Match creator or team admins can update
      allow update: if isOwner(resource.data.createdBy) || 
                       isTeamAdmin(resource.data.teamId);
      
      // Match creator or team admins can delete
      allow delete: if isOwner(resource.data.createdBy) || 
                       isTeamAdmin(resource.data.teamId);
    }
    
    // Squads collection
    match /squads/{squadId} {
      // Team members can read squads from their teams
      allow read: if isTeamMember(resource.data.teamId);
      
      // Authenticated users can create squads
      allow create: if isAuthenticated() && 
                       isTeamMember(request.resource.data.teamId);
      
      // Squad creator or team admins can update
      allow update: if isOwner(resource.data.createdBy) || 
                       isTeamAdmin(resource.data.teamId);
      
      // Squad creator or team admins can delete
      allow delete: if isOwner(resource.data.createdBy) || 
                       isTeamAdmin(resource.data.teamId);
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
